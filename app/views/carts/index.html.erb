
<div class="container">
    <h2>Your Items</h2>
    <table class="table table-striped table-hover" style="background-color:#b2ebf2 ">
    <thead class="table-primary">
        <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        <% @cart.cart_items.each_with_index do |item,i|%>
            <tr>
                <td scope="row"><%=i+1%></td>
                <td><%=item.menu_item.name%></td>
                <td><%=item.menu_item.price%></td>
                <td><%=link_to cart_item_delete_path(item), data: {turbo_method: :delete, turbo_confirm: "Are you sure to delete this item"} do %>
                    <i class="fa fa-times text-danger"></i>
                <%end%>
            </tr>
        <%end%>
         <tr class="table-danger">
            <td scope="row"></td>
            <td>Total</td>
            <td><%=@cart.total%></td>
            <td></td>
        </tr>
    </tbody>
    </table>
    <%unless @cart.total==0%>
        <div class="d-grid gap-2 d-md-block col-3 mx-auto btn-lg">
            <%=link_to "Order Now", order_path(@cart),data: {turbo_method: :post}, class:"btn btn-success"%>
        </div>
    <%end%>
</div>



