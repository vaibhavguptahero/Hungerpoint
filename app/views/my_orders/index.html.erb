<div class="container">
    <h1 class="text-center">MyOrders</h1>
    <div class="card bg-transparent" >
        <%@my_orders.each do |order|%>
            <div class="card mb-3" style="background-color: #e9eca7;">
                <% items=order.cart.cart_items %>
                <div class="card-title d-flex justify-content-between mx-2">
                    <h1 class="display-4">Order No.<%=order.cart.id%></h1>
                    <p>Ordered At: <%=order.ordered_at.strftime("%d-%m-%Y")%></p>
                </div>
                <h3 class="card-subtitle mb-2 text-muted mx-2"><%= items.first.restrau_name %></h3>
                <div class="card-body">
                    <%items.each do |item|%>
                        <div class="d-flex justify-content-between">
                            <p class="lead"><%=item.menu_item.name%></p>
                            <p class="text-muted"><%=item.menu_item.price%></p>
                        </div>
                        <hr class="my-4">
                    <%end%>
                    <div class="d-flex justify-content-between mb-3">
                        <p class="lead">Grand Total:</p>
                        <p><%=order.total%></p>
                    </div>
                    <div class="d-flex justify-content-end mb-3">
                        <%= link_to 'Reorder', reorder_path(order.cart), class:"btn btn-primary"%>
                    </div>
                </div>
            </div>
        <%end%>
    </div>
</div>

